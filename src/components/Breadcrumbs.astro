---
const { crumbs = [] } = Astro.props as { crumbs: { href: string, label: string }[] }
---
<nav aria-label="Breadcrumb" class="text-xs sm:text-sm mb-6">
  <ol class="flex flex-wrap gap-2 text-ps-navy/70">
    {crumbs.map((c,i) => (
      <li>
        {i>0 && <span>/</span>}
        <a href={c.href} class="hover:text-ps-red">{c.label}</a>
      </li>
    ))}
  </ol>
</nav>
