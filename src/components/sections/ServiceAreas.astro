---
const areas = [
  "San Diego","Chula Vista","Oceanside","San Marcos",
  "Escondido","El Cajon","Vista","Encinitas","Poway","Carlsbad"
];
---
<section class="section bg-white">
  <div class="container">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-2xl md:text-3xl font-semibold text-ps-navy">Service Areas</h2>
      <p class="mt-2 text-ps-navy">USPS-approved installation across San Diego County.</p>
    </div>
    <div class="mt-6 flex flex-wrap justify-center gap-2">
      {areas.map(a => (
        <a href={`/service-areas/${a.toLowerCase().replaceAll(' ','-')}`}
           class="inline-flex items-center rounded-full bg-ps-navy px-3 py-1 text-sm text-ps-navy ring-1 ring-slate-200 hover:bg-ps-navy">
          {a}
        </a>
      ))}
    </div>
  </div>
</section>
