---
interface Props {
  title?: string;
  sub?: string;
  primaryHref: string;
  primaryLabel: string;
  secondaryHref?: string;
  secondaryLabel?: string;
}

const {
  title = "Get a USPS-approved quote",
  sub = "Fast, compliant installs with inspection sign-off.",
  primaryHref = "/contact/",
  primaryLabel = "Get a Quote",
  secondaryHref = "tel:16194614787",
  secondaryLabel = "Call (619) 461-4787",
} = Astro.props as Props;
---
<section class="rounded-2xl p-6 shadow-ps border border-ps-muted bg-white">
  <h2 class="text-xl sm:text-2xl font-semibold text-ps-navy">{title}</h2>
  <p class="text-sm text-ps-navy/75 mt-1">{sub}</p>
  <div class="mt-4 flex flex-col sm:flex-row gap-3">
    <a
      href={primaryHref}
      class="inline-flex items-center justify-center rounded-full px-5 py-2.5 text-sm font-semibold bg-ps-red text-white shadow-md hover:bg-ps-red/90 transition"
    >
      {primaryLabel}
    </a>
    {secondaryHref && (
      <a
        href={secondaryHref}
        class="inline-flex items-center justify-center rounded-full px-5 py-2.5 text-sm font-semibold border border-ps-navy/20 text-ps-navy hover:bg-ps-navy hover:text-white transition"
      >
        {secondaryLabel}
      </a>
    )}
  </div>
</section>
