---
interface Props { title?: string; eyebrow?: string; href?: string; class?: string }
const { title = "", eyebrow = "", href = "", class: klass = "" } = Astro.props as Props
export const prerender = true;
const base = `block rounded-2xl border border-ps-muted bg-white p-5 shadow-ps hover:-translate-y-1 hover:shadow-[0_20px_50px_rgba(1,33,105,0.18)] transition focus:outline-none focus:ring-2 focus:ring-ps-navy ${klass}`.trim()
---
{href ? (
  <a href={href} class={base}>
    {eyebrow && <div class="text-[10px] font-semibold uppercase tracking-[0.18em] text-ps-red mb-1">{eyebrow}</div>}
    {title && <h3 class="text-sm font-semibold text-ps-navy">{title}</h3>}
    <slot name="media" />
    <slot />
  </a>
) : (
  <div class={base}>
    {eyebrow && <div class="text-[10px] font-semibold uppercase tracking-[0.18em] text-ps-red mb-1">{eyebrow}</div>}
    {title && <h3 class="text-sm font-semibold text-ps-navy">{title}</h3>}}
    <slot name="media" />
    <slot />
  </div>
)}