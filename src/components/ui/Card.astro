---
interface Props { title?: string; eyebrow?: string; href?: string; class?: string }
const { title = "", eyebrow = "", href = "", class: klass = "" } = Astro.props as Props
export const prerender = true;
const base = `block rounded-2xl border border-gray-200 bg-white p-5 shadow-sm transition hover:shadow-md focus:outline-none focus:ring-2 focus:ring-primary-600 ${klass}`.trim()
---
{href ? (
  <a href={href} class={base}>
    {eyebrow && <div class="text-xs uppercase tracking-wider text-primary-700 mb-1">{eyebrow}</div>}
    {title && <h3 class="text-lg font-semibold">{title}</h3>}
    <slot name="media" />
    <slot />
  </a>
) : (
  <div class={base}>
    {eyebrow && <div class="text-xs uppercase tracking-wider text-primary-700 mb-1">{eyebrow}</div>}
    {title && <h3 class="text-lg font-semibold">{title}</h3>}
    <slot name="media" />
    <slot />
  </div>
)}