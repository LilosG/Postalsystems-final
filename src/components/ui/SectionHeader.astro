---
type Align = "left" | "center"
interface Props { title: string; subtitle?: string; sub?: string; eyebrow?: string; align?: Align }
const { title, subtitle = "", sub = "", eyebrow = "", align = "left" } = Astro.props as Props
export const prerender = true;
const textAlign = align === "center" ? "text-center" : "text-left"
---
<div class={textAlign}>
  {eyebrow && <div class="text-xs uppercase tracking-wider text-primary-700">{eyebrow}</div>}
  <h2 class="text-2xl md:text-3xl font-semibold">{title}</h2>
  {(subtitle || sub) && <p class="text-gray-600 max-w-prose">{subtitle || sub}</p>}
</div>