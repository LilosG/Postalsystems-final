---
import "../styles/tailwind.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PromoBanner from "../components/PromoBanner.astro";
const { title = "Postal Systems", description = "USPS-approved commercial mailbox contractor in San Diego County." } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0b2440" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-white font-sans text-gray-900 antialiased">
    <PromoBanner />
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
