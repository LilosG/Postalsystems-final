---
import "../styles/global.css";
const { title = "Postal Systems" } = Astro.props;
---
<html lang="en">
  <head>
    {Astro.props.noindex ? <meta name="robots" content="noindex, nofollow" /> : null}

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="bg-white text-ps-navy">
    <slot />
  </body>
</html>
