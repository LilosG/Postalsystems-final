---
import Header from "../../components/Header.astro";
import PromoBanner from "../../components/PromoBanner.astro";
import HeroSection from "../../components/sections/HeroSection.astro";
import QuoteSection from "../../components/sections/QuoteSection.astro";
import Footer from "../../components/Footer.astro";

const { post } = Astro.params;

const schema = {
  "@context":"https://schema.org",
  "@type":"LocalBusiness",
  "name":"Postal Systems",
  "description":"USPS-approved commercial mailbox installation, repair and replacement. We install Cluster Box Units (CBUs), parcel lockers, 4C mailboxes, and ADA-compliant mailbox stations; pour pads and set anchors; coordinate USPS inspection; perform lock and key changeouts; and provide warranty and ongoing support.",
  "telephone":"(619) 461-4787",
  "email":"info@postalsystemspro.com",
  "address":{
    "@type":"PostalAddress",
    "streetAddress":"PO Box 850",
    "addressLocality":"La Mesa",
    "addressRegion":"CA",
    "postalCode":"91944",
    "addressCountry":"US"
  },
  "areaServed":[
    "San Diego County, CA",
    "Select cities in Orange County, CA",
    "Select cities in Riverside County, CA"
  ],
  "license":"Licensed, Bonded & Insured • CA Lic. #904106"
};
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{post} — Postal Systems Blog</title>
    <meta name="description" content="Postal Systems blog article for HOAs, property managers, and builders in San Diego County." />
    <script type="application/ld+json">{JSON.stringify(schema)}</script>
  </head>
  <body>
    <Header /><HeroSection heading="Postal Systems Blog" sub="USPS-approved commercial mailbox expertise for San Diego County." />
    <section class="py-16">
      <div class="container mx-auto px-4 max-w-3xl prose prose-slate">
        <h1 class="text-2xl font-bold capitalize">{post.replace(/-/g,' ')}</h1>
        <p>Article content goes here.</p>
      </div>
    </section>
    <QuoteSection />
    <Footer />
  </body>
</html>
