---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { SERVICES, SITE } from "../../../data/site";

export const prerender = true;

const county = { name: "Orange County", slug: "orange-county" };
const pageTitle = `${county.name} Service Area | ${SITE.name}`;
const desc = `We primarily serve San Diego County and take select projects across ${county.name}.`;
const url = new URL(Astro.url.pathname, SITE.url).toString();
const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: `Mailbox services in ${county.name}`,
  areaServed: county.name,
  provider: { "@type": "LocalBusiness", name: SITE.name, telephone: SITE.phone, url: SITE.url }
};
---
<BaseLayout title={pageTitle} description={desc} url={url} schema={schema}>
  <main class="max-w-5xl mx-auto p-6 space-y-6">
    <header class="space-y-2">
      <h1 class="text-2xl font-semibold">{county.name}</h1>
      <p class="text-gray-700">{desc}</p>
    </header>

    <section class="space-y-3">
      <h2 class="text-xl font-semibold">Representative services</h2>
      <ul class="grid gap-3 sm:grid-cols-2">
        {SERVICES.map((svc) => (
          <li class="border rounded-lg p-4 hover:shadow">
            <a class="font-medium underline" href={`/services/${svc.slug}/`}>{svc.name}</a>
          </li>
        ))}
      </ul>
      <p class="text-sm text-gray-600 mt-2">Note: San Diego County remains our primary focus.</p>
    </section>
  </main>
</BaseLayout>
