---
import { buildServicePageSchema } from "../../../schema/service";
import SiteLayout from "../../../layouts/SiteLayout.astro"
import Breadcrumbs from "../../../components/Breadcrumbs.astro"
import SectionHeader from "../../../components/ui/SectionHeader.astro"
import TrustGrid from "../../../components/TrustGrid.astro"
import ProcessStrip from "../../../components/ProcessStrip.astro"

type Area = {
  city: string
  state?: string
}

type Service = {
  name: string
  summary?: string
}

export async function getStaticPaths() {
  const areas = (await import("../../../data/areas.json")).default as Area[]
  const services = (await import("../../../data/services.json")).default as Service[]

  const paths: any[] = []

  for (const a of areas) {
    const cityName = a.city
    const state = a.state ?? "CA"

    const citySlug = String(cityName)
      .toLowerCase()
      .replace(/[^a-z0-9]+/g, "-")
      .replace(/(^-|-$)/g, "")

    for (const svc of services) {
      const serviceSlug = String(svc.name)
        .toLowerCase()
        .replace(/[^a-z0-9]+/g, "-")
        .replace(/(^-|-$)/g, "")

      paths.push({
        params: { city: citySlug, service: serviceSlug },
        props: {
          c: { city: cityName, state },
          s: svc,
        },
      })
    }
  }

  return paths
}

const { c, s } = Astro.props as {
  c: { city: string; state: string }
  s: Service
}

const citySlug = String(c.city)
  .toLowerCase()
  .replace(/[^a-z0-9]+/g, "-")
  .replace(/(^-|-$)/g, "")

const serviceSlug = String(s.name)
  .toLowerCase()
  .replace(/[^a-z0-9]+/g, "-")
  .replace(/(^-|-$)/g, "")

const serviceCity = `${s.name} in ${c.city}, ${c.state}`
const title = `${serviceCity} — Postal Systems`

const cityServiceModules = import.meta.glob(
  "../../../data/city-service-content/*.json",
  { eager: true }
) as Record<string, any>

const cityServiceEntries = Object.values(cityServiceModules).map(
  (mod) => (mod as any).default
) as any[]

const cityFile = cityServiceEntries.find(
  (entry) => entry.serviceSlug === serviceSlug
)

const cityContent = cityFile?.cities?.[citySlug] ?? null

const baseDesc =
  s.summary ||
  `${s.name} by USPS-approved installers serving ${c.city}, ${c.state}.`
const desc = cityContent?.intro || baseDesc

const canonical = `https://sandiegocommercialmailboxes.com/service-areas/${citySlug}/${serviceSlug}/`

const pageSchema = buildServicePageSchema({
  name: s.name,
  description: desc,
  serviceUrl: canonical,
  areaServedCity: c.city,
  areaServedState: c.state,
})


const allServices = (await import("../../../data/services.json")).default as {
  name: string
  summary?: string
}[]

const servicesContentModules = import.meta.glob(
  "../../../data/services-content/*.json",
  { eager: true }
) as Record<string, any>

const serviceContentMap = Object.fromEntries(
  Object.entries(servicesContentModules).map(([path, mod]) => {
    const slug = path.split("/").pop()?.replace(".json", "") ?? ""
    return [slug, (mod as any).default]
  })
) as Record<string, any>

const serviceContent = serviceContentMap[serviceSlug] ?? null

const cityHeroImage = cityContent?.heroImage || ""
const heroImage = cityHeroImage || serviceContent?.heroImage || ""
const heroAlt =
  cityContent?.heroAlt ||
  serviceContent?.heroAlt ||
  `${s.name} installation in ${c.city}, ${c.state}`

const otherServices = allServices.filter((svc) => svc.name !== s.name)

export const prerender = true
---
<SiteLayout {title} description={desc} canonical={canonical} schema={pageSchema}>
  <main class="max-w-6xl mx-auto px-4 lg:px-6 py-10 lg:py-12">
    <Breadcrumbs
      crumbs={[
        { href: "/", label: "Home" },
        { href: "/service-areas/", label: "Service Areas" },
        { href: `/service-areas/${citySlug}/`, label: c.city },
        { href: canonical, label: s.name },
      ]}
    />

    <section class="mt-4 grid gap-8 lg:grid-cols-[minmax(0,1.4fr)_minmax(0,1fr)] items-start">
      <div>
        <p class="text-[11px] font-semibold tracking-[0.2em] uppercase text-ps-navy/70">
          Mailbox services · {c.city}, {c.state}
        </p>
        <h1 class="mt-2 text-3xl md:text-4xl font-semibold tracking-tight text-ps-navy">
          {serviceCity}
        </h1>
        <p class="mt-2 text-sm md:text-base text-ps-navy/80 max-w-2xl">
          {desc} We coordinate layout, pads, anchors, tenant notices, and USPS
          inspections so your team does not have to.
        </p>
        <ul class="mt-4 space-y-1.5 text-sm text-ps-navy/85">
          <li>• USPS-approved contractor for commercial mailbox systems.</li>
          <li>• Local experience with HOAs and multifamily properties.</li>
          <li>• Turnkey installs from site visit through USPS sign-off.</li>
        </ul>
        <div class="mt-6 flex flex-wrap gap-3">
          <a
            href="/contact/"
            class="inline-flex items-center justify-center rounded-full bg-ps-red px-5 py-2.5 text-sm font-semibold text-white shadow-md hover:bg-ps-red/90 transition"
          >
            Get a USPS-approved quote
          </a>
          <a
            href="tel:16194614787" data-ga-event="click_to_call" data-ga-category="Contact" data-ga-label="main_phone"
            class="inline-flex items-center justify-center rounded-full border border-ps-navy/20 bg-white px-5 py-2.5 text-sm font-semibold text-ps-navy hover:bg-ps-navy hover:text-white transition"
          >
            Call (619) 461-4787
          </a>
        </div>
      </div>

      {heroImage && (
        <aside class="rounded-3xl bg-white shadow-ps border border-ps-muted px-5 py-5 md:px-6 md:py-6">
          <div class="overflow-hidden rounded-2xl bg-ps-surface">
            <img
              src={heroImage}
              alt={heroAlt}
              loading="lazy"
              decoding="async"
              class="h-44 w-full object-cover md:h-52"
            />
          </div>
          <p class="mt-3 text-xs text-ps-navy/80">
            Postal Systems is a USPS-approved contractor serving {c.city} and nearby communities
            with compliant mailbox systems, pad work, and inspection coordination.
          </p>
        </aside>
      )}
    </section>

    {cityContent?.sections && cityContent.sections.length > 0 && (
      <section class="mt-10 space-y-10 max-w-3xl">
        {cityContent.sections.map((block: any) => (
          <article id={block.id} class="space-y-3">
            <h2 class="text-xl md:text-2xl font-semibold text-ps-navy">
              {block.heading}
            </h2>
            {block.body && (
              <p class="text-sm md:text-base text-ps-navy/85">
                {block.body}
              </p>
            )}
            {block.bullets && block.bullets.length > 0 && (
              <ul class="mt-2 space-y-1.5 text-sm text-ps-navy/85">
                {block.bullets.map((item: string) => (
                  <li class="flex gap-2">
                    <span class="mt-1 h-1.5 w-1.5 rounded-full bg-ps-red"></span>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            )}
            {block.closing && (
              <p class="mt-2 text-sm md:text-base text-ps-navy/85">
                {block.closing}
              </p>
            )}
          </article>
        ))}
      </section>
    )}

    {cityContent?.faqs && cityContent.faqs.length > 0 && (
      <section class="mt-10">
        <SectionHeader
          title={`FAQs about ${s.name.toLowerCase()} in ${c.city}`}
          subtitle="Questions we regularly hear from boards, managers, and owners in this area."
          align="left"
        />
        <div class="mt-4 space-y-3">
          {cityContent.faqs.map((faq: any) => (
            <details class="group rounded-2xl border border-ps-muted bg-white p-4 shadow-ps">
              <summary class="flex cursor-pointer items-center justify-between text-sm font-semibold text-ps-navy">
                <span>{faq.question}</span>
                <span class="ml-3 text-xs text-ps-navy/60 group-open:hidden">+</span>
                <span class="ml-3 text-xs text-ps-navy/60 hidden group-open:inline">−</span>
              </summary>
              <p class="mt-2 text-xs text-ps-navy/80">
                {faq.answer}
              </p>
            </details>
          ))}
        </div>
      </section>
    )}

    {cityContent?.nearbyAreas && cityContent.nearbyAreas.length > 0 && (
      <section class="mt-10">
        <SectionHeader
          title="Nearby areas we serve for this service"
          subtitle="If you manage multiple properties, we can coordinate projects across neighboring communities."
          align="left"
        />
        <ul class="mt-4 flex flex-wrap gap-2 text-xs">
          {cityContent.nearbyAreas.map((area: any) => (
            <li>
              <a
                href={area.url}
                class="inline-flex items-center rounded-full border border-ps-muted bg-white px-3 py-1 text-ps-navy hover:text-ps-red hover:border-ps-red/60"
              >
                {area.label}
              </a>
            </li>
          ))}
        </ul>
      </section>
    )}

    {otherServices.length > 0 && (
      <section class="mt-10">
        <SectionHeader
          title={`Other mailbox services in ${c.city}`}
          subtitle="We handle a full range of mailbox projects for local communities and properties."
          align="left"
        />
        <ul class="mt-4 grid gap-4 md:grid-cols-2 text-sm">
          {otherServices.map((svc) => {
            const otherSlug = String(svc.name)
              .toLowerCase()
              .replace(/[^a-z0-9]+/g, "-")
              .replace(/(^-|-$)/g, "")
            return (
              <li>
                <a
                  href={`/service-areas/${citySlug}/${otherSlug}/`}
                  class="block rounded-2xl border border-ps-muted bg-white px-4 py-3 text-ps-navy hover:border-ps-red/60 hover:text-ps-red"
                >
                  <div class="text-sm font-semibold">{svc.name}</div>
                  {svc.summary && (
                    <div class="mt-1 text-[11px] text-ps-navy/70">
                      {svc.summary}
                    </div>
                  )}
                </a>
              </li>
            )
          })}
        </ul>
      </section>
    )}

    <section class="mt-10">
      <TrustGrid />
    </section>

    <section class="mt-10">
      <ProcessStrip />
    </section>
  </main>
</SiteLayout>
