---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { ALL_CITIES, SITE } from "../../data/site";

export const prerender = true;

const pageTitle = `Service Areas | ${SITE.name}`;
const desc = `Primary coverage across San Diego County with projects in Temecula, Riverside County and Orange County.`;
const url = new URL(Astro.url.pathname, SITE.url).toString();

const schema = {
  "@context": "https://schema.org",
  "@type": "Collection",
  name: "Service Areas",
  url
};
---
<BaseLayout title={pageTitle} description={desc} url={url} schema={schema}>
  <main class="max-w-5xl mx-auto p-6 space-y-6">
    <header class="space-y-2">
      <h1 class="text-2xl font-semibold">Service Areas</h1>
      <p class="text-gray-700">{desc}</p>
    </header>

    <ul class="grid gap-3 sm:grid-cols-2 md:grid-cols-3">
      {ALL_CITIES.map((c) => (
        <li class="border rounded-lg p-4 hover:shadow">
          <a href={`/service-area/${c.slug}/`} class="font-medium underline">{c.name}</a>
        </li>
      ))}
    </ul>
  </main>
</BaseLayout>
