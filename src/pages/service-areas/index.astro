---
import { postalSystemsLocalBusinessSchema as schema } from "../../schema/localBusiness";
import SiteLayout from "../../layouts/SiteLayout.astro"
import CTA from "../../components/ui/CTA.astro"
import SectionHeader from "../../components/ui/SectionHeader.astro"
import { slugify } from "../../lib/slug"
import TrustGrid from "../../components/TrustGrid.astro"
import ProcessStrip from "../../components/ProcessStrip.astro"

const areas = (await import("../../data/areas.json")).default as {
  city: string
  state?: string
  county?: string
}[]

const title = "Service Areas | Postal Systems"
const description =
  "Commercial mailbox installation and service across San Diego County, with select coverage in Riverside County and Orange County."
const canonical = "https://sandiegocommercialmailboxes.com/service-areas/"
export const prerender = true
---
<SiteLayout {title} {description} {canonical} schema={schema}>
  <main class="max-w-6xl mx-auto px-4 lg:px-6 py-10">
    <h1 class="sr-only">Service areas</h1>

    <SectionHeader
      title="Service areas"
      subtitle="USPS-approved commercial mailbox installation across San Diego County, with select projects in Riverside County and Orange County."
      align="left"
    />

    <ul class="mt-8 grid md:grid-cols-3 gap-6">
      {areas.map((c) => (
        <li class="rounded-2xl border border-ps-muted bg-white p-5 shadow-ps hover:-translate-y-1 hover:shadow-[0_20px_50px_rgba(1,33,105,0.18)] transition">
          <a
            href={`/service-areas/${slugify(c.city)}/`}
            class="text-sm font-semibold text-ps-navy hover:text-ps-red"
          >
            {c.city}
            {c.state ? `, ${c.state}` : ""}
          </a>
          {c.county && (
            <p class="mt-1 text-xs text-ps-navy/80">
              {c.county} County
            </p>
          )}
        </li>
      ))}
    </ul>

    <section class="mt-12">
      <SectionHeader
        title="Popular mailbox services"
        subtitle="Explore our commercial mailbox services across all service areas."
        align="left"
      />
      <ul class="mt-4 grid md:grid-cols-4 gap-3 text-sm">
        {[
          { name: 'Commercial Mailbox Installation', slug: 'commercial-mailbox-installation' },
          { name: 'CBU Installation', slug: 'cbu-installation' },
          { name: '4C Wall-Mounted Mailboxes', slug: '4c-wall-mounted-mailboxes' },
          { name: 'Parcel Lockers', slug: 'parcel-lockers' },
          { name: 'Repairs & Lock Changes', slug: 'repairs-lock-changes' },
          { name: 'ADA-Compliant Installs', slug: 'ada-compliant-installs' },
          { name: 'Mailbox Replacement', slug: 'mailbox-replacement-retrofits' },
          { name: 'Relocation & Consolidation', slug: 'mailbox-relocation-consolidation' },
        ].map((s) => (
          <li>
            <a
              href={`/services/${s.slug}/`}
              class="block rounded-lg border border-ps-muted bg-white px-3 py-2 text-ps-navy hover:border-ps-red/60 hover:text-ps-red"
            >
              {s.name}
            </a>
          </li>
        ))}
      </ul>
    </section>

    <section class="mt-12">
      <SectionHeader
        title="Why properties across San Diego choose Postal Systems"
        subtitle="We specialize in compliant, USPS-approved mailbox systems for HOAs, apartments, builders, and commercial sites."
        align="left"
      />
      <div class="mt-4">
        <TrustGrid />
      </div>
    </section>

    <ProcessStrip subtitle="Whether you are replacing aging units or installing new systems, our team manages layout, installation, and USPS inspection." />

    <div class="mt-12">
      <CTA primaryHref="/contact/" primaryLabel="Donâ€™t see your city? Contact us." />
    </div>
  </main>
</SiteLayout>
