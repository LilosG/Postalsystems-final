---
import SiteLayout from "../layouts/SiteLayout.astro";
import { postalSystemsLocalBusinessSchema as schema } from "../schema/localBusiness.ts";

export const prerender = true;

const title = "Thank You | Postal Systems";
const description =
  "Thank you for contacting Postal Systems. A member of our team will follow up shortly.";
const canonical = (Astro.site ? new URL("/thank-you/", Astro.site).toString() : "/thank-you/");
---

<SiteLayout {title} {description} {canonical} schema={schema} noindex={true}>
  <main class="mx-auto max-w-4xl px-4 py-14">
    <h1 class="text-3xl font-extrabold tracking-tight text-ink">Thank you — we got your request.</h1>
    <p class="mt-3 text-lg text-muted">
      We’ll reach out shortly. If this is urgent, call us and we can help right away.
    </p>

    <div class="mt-8 flex flex-wrap gap-3">
      <a href="/contact/" class="rounded-xl border border-line bg-card px-4 py-3 font-bold text-ink">
        Back to Contact
      </a>
      <a href="/" class="rounded-xl border border-line bg-card px-4 py-3 font-bold text-ink">
        Home
      </a>
    </div>
  </main>
</SiteLayout>
