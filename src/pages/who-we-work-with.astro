---
import SiteLayout from "../layouts/SiteLayout.astro"
import SectionHeader from "../components/ui/SectionHeader.astro"
import CTA from "../components/ui/CTA.astro"

const title = "Who We Work With | Postal Systems"
const description =
  "USPS-approved commercial mailbox systems for HOAs, property managers, apartments, builders, commercial and industrial facilities, and campuses across San Diego County."
const canonical = "https://sandiegocommercialmailboxes.com/who-we-work-with/"
export const prerender = true
---
<SiteLayout {title} {description} {canonical}>
  <main class="max-w-6xl mx-auto px-4 lg:px-6 py-10">
    <h1 class="sr-only">Who we work with</h1>

    <SectionHeader
      title="Who we work with"
      subtitle="Turnkey commercial mailbox systems for managed properties, builders, and facilities that need compliant, coordinated installs with USPS sign-off."
      align="left"
    />

    <div class="mt-8 grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <article class="rounded-2xl border border-ps-muted bg-white p-5 shadow-ps">
        <h2 class="text-sm font-semibold text-ps-navy">HOA &amp; Property Management</h2>
        <p class="mt-2 text-xs text-ps-navy/80">
          Turnkey installs with USPS coordination, tenant notice, and documentation for boards and managers.
        </p>
        <a
          href="/services/commercial-mailbox-installation/"
          class="mt-3 inline-flex text-xs font-semibold text-ps-red hover:text-ps-red/90"
        >
          See installation services →
        </a>
      </article>

      <article class="rounded-2xl border border-ps-muted bg-white p-5 shadow-ps">
        <h2 class="text-sm font-semibold text-ps-navy">Apartments &amp; Multi-family</h2>
        <p class="mt-2 text-xs text-ps-navy/80">
          New construction layouts, vandalism replacement, and parcel lockers designed for resident convenience.
        </p>
        <a
          href="/services/parcel-lockers/"
          class="mt-3 inline-flex text-xs font-semibold text-ps-red hover:text-ps-red/90"
        >
          See parcel locker installs →
        </a>
      </article>

      <article class="rounded-2xl border border-ps-muted bg-white p-5 shadow-ps">
        <h2 class="text-sm font-semibold text-ps-navy">Builders &amp; General Contractors</h2>
        <p class="mt-2 text-xs text-ps-navy/80">
          Construction-ready CBU and 4C layouts, pads, anchors, and inspection support coordinated with your schedule.
        </p>
        <a
          href="/services/cbu-installation/"
          class="mt-3 inline-flex text-xs font-semibold text-ps-red hover:text-ps-red/90"
        >
          See CBU installation →
        </a>
      </article>

      <article class="rounded-2xl border border-ps-muted bg-white p-5 shadow-ps">
        <h2 class="text-sm font-semibold text-ps-navy">Commercial &amp; Industrial Parks</h2>
        <p class="mt-2 text-xs text-ps-navy/80">
          Secure, code-compliant mailbox systems for offices, warehouses, and business parks.
        </p>
        <a
          href="/services/mailbox-replacement-retrofits/"
          class="mt-3 inline-flex text-xs font-semibold text-ps-red hover:text-ps-red/90"
        >
          See retrofit options →
        </a>
      </article>

      <article class="rounded-2xl border border-ps-muted bg-white p-5 shadow-ps">
        <h2 class="text-sm font-semibold text-ps-navy">Campus, Municipal &amp; Public</h2>
        <p class="mt-2 text-xs text-ps-navy/80">
          ADA-compliant layouts, documented clearances, and long-term service support for campuses and public agencies.
        </p>
        <a
          href="/services/ada-compliant-installs/"
          class="mt-3 inline-flex text-xs font-semibold text-ps-red hover:text-ps-red/90"
        >
          See ADA-compliant installs →
        </a>
      </article>
    </div>

    <div class="mt-12">
      <CTA
        primaryHref="/contact/"
        primaryLabel="Talk through your property"
      />
    </div>
  </main>
</SiteLayout>
